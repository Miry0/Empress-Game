<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Storage</display-name>
  <welcome-file-list>
    <welcome-file>ProductView.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>JNDI reference to a data source</description>
    <res-ref-name>jdbc/Empress_DB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  
 <!-- Registrazione_servlet -->
    <servlet>
        <servlet-name>RegistrazioneServlet</servlet-name>
        <servlet-class>src.main.java.control.Registrazione_servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrazioneServlet</servlet-name>
        <url-pattern>/Registrazione_servlet/*</url-pattern>
    </servlet-mapping>

    <!-- Login_servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>src.main.java.control.Login_servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login_servlet/*</url-pattern>
    </servlet-mapping>

    <!-- Logout_servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>src.main.java.control.Logout_servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout_servlet/*</url-pattern>
    </servlet-mapping>
    
    <!-- Hash_filter -->
    <filter>
        <filter-name>HashFilter</filter-name>
        <filter-class>src.main.java.control.Hash_filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HashFilter</filter-name>
        <url-pattern>/Registrazione_servlet/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>HashFilter</filter-name>
        <url-pattern>/Login_servlet/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>HashFilter</filter-name>
        <url-pattern>/Logout_servlet/*</url-pattern>
    </filter-mapping>
   
  
</web-app>